        hasSets = 1;
        shappends(1, "- Legend Set\n");
        shappends(1, "  Effect: +15% All Damage\n\n");
    }
    
    // Check Golden Set
    if(golden) {
        hasSets = 1;
        shappends(1, "- Golden Set\n");
        shappends(1, "  Effect: +10% All Damage, +10% All Resistance, 15% chance for bonus rank progress\n\n");
    }
    
