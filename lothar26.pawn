// Function to check if player has any unclaimed rank rewards
hasUnclaimedRewards(PlayerID) {
    // Get player's pit rank
    shset(0, RANK_FLAG);
    new currentRank = gsGetFlag(PlayerID, 0);
    
    // Check if already claimed
    shset(0, RANK_REWARDS_CLAIMED);
    new claimedRanks = gsGetFlag(PlayerID, 0);
    
    for(new i = 1; i <= currentRank; i++) {
        if(!(claimedRanks & (1 << (i-1)))) {
            return 1;
        }
    }
    return 0;
}

// Improved function to check player equipment sets
checkPlayerSets(MapID, NPCID, PlayerID) {
