    shset(1, "Your Equipment Sets:(These work only in Pit)\n");
    shappends(1, "=======================\n\n");
    
    new hasSets = 0;
    
    // Get all set statuses in one call
    shset(0, ITEMSCRIPT);
    shset(2, "GetEquippedSets");
    
    new burning, mithril, master, masterMage, masterBow, holy, arctic, blood, legend, golden;
    new skullBlade, luckBracelet, mageWeapon, bowWeapon;
    
